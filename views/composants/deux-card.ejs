<div class="deux-card-container">
    <h3 style="text-align: start; margin-left: 10px;">Les offres du moments</h3> <br> <br> <br>
    <% moment.forEach((produit) => { %>
    <div class="carte">
        <img src="<%= produit.url %>" width="55px" alt="<%= produit.nom %>" >
        <br>
        <p style="text-align: center; text-transform: uppercase;"> <strong> <%= produit.nom %> </strong> </p>
        <span><%= produit.info %></span>
        <div class="prix">
            <span class="prix-actuel" style="color: #293847; font-weight: bolder; font-size: 0.9rem;"><%= produit.prix %> CFA</span>
        </div>
      <button class="add-to-cart-btn" data-product-id="<%= produit.id %>" data-product-nom="<%= produit.nom %>" data-product-prix="<%= produit.prix %>" data-product-url="<%= produit.url %>" data-product-info="<%= produit.info %>" onclick="addToCart(this)">Ajouter</button>
    </div>
    <% }); %>

    
</div>
<br> <br>